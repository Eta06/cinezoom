{
    "manifest_version": 3,
    "name": "CineZoom for YTâ„¢",
    "description": "Transform your videos into a cinematic ultrawide experience with one click.",
    "version": "1.3",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "logo.png",
            "48": "logo.png",
            "128": "logo.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle-zoom": {
            "suggested_key": {
                "default": "Alt+Z"
            },
            "description": "Toggle 21:9 Zoom"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}